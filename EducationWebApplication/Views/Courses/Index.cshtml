@model IEnumerable<EducationWebApplication.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Course Professor
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseProf)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-file-earmark-text"></i>&nbsp; Details</a>
                 <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i>&nbsp;Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbsp; New Course</a>
</p>
