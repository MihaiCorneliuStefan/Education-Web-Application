@model EducationWebApplication.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseProf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseProf)
        </dd>
